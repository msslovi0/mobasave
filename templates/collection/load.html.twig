{% extends 'base.html.twig' %}
{% if 'mbs_manufacturer' in app.request.attributes.get("_route") %}
    {% set current = 'manufacturer' %}
    {% set path_back = path('mbs_manufacturer_models', {id: model.manufacturer.id}) %}
{% elseif 'mbs_dealer' in app.request.attributes.get("_route") %}
    {% set current = 'dealer' %}
    {% set path_back = path('mbs_dealer_models', {id: model.dealer.id}) %}
{% elseif 'mbs_company' in app.request.attributes.get("_route") %}
    {% set current = 'company' %}
    {% set path_back = path('mbs_company_models', {id: model.company.id}) %}
{% else %}
    {% set current = 'model' %}
    {% set path_back = path('mbs_database', {id: app.session.get('database')}) %}
{% endif %}

{% block title %}{{ 'global.nav.details'|trans }} {{ model.name }} ({{ model.model }}){% endblock %}
{% block body %}
    <div class="py-10">
        <header>
            <div class="flex justify-between mx-auto max-w-10xl px-4 sm:px-6 lg:px-8">
                <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">{{ model.name }}</h1>
                <div class="flex gap-1">
                    <a href="{{ path('mbs_model_add') }}" type="button" class="block rounded-md bg-green-800 px-3 py-2 text-center text-sm font-semibold text-white shadow-xs hover:bg-green-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-800 dark:bg-green-700 dark:hover:bg-green-600 dark:focus-visible:outline-green-700">{{ 'model.list.add'|trans }}</a>
                    <a href="{{ path_back }}" type="button" class="block rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-xs inset-ring inset-ring-gray-300 hover:bg-gray-50 dark:bg-white/10 dark:text-white dark:shadow-none dark:inset-ring-white/5 dark:hover:bg-white/20">{{ 'global.back'|trans }}</a>
                </div>
            </div>
        </header>
        <main>
        <div class="mx-auto max-w-10xl px-4 py-8 sm:px-6 lg:px-8">
        <div class="space-y-12">
            {%  include 'collection/nav.html.twig' with {'template': 'load'} %}
            <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 md:grid-cols-3 dark:border-white/10">
                <div>
                    {% if model.image!="" %}<img src="{{ absolute_url(asset('data/image/' ~ model.image))|replace({"localhost:8000": remotehost}) }}" alt="{{ model.name }}" class="border-gray-300 dark:border-white/10 rounded-md border mx-auto h-auto w-200" />{% endif %}
                </div>

                <div class="grid max-w-2xl grid-cols-2 gap-2 sm:grid-cols-6 md:col-span-2">
                    <div class="col-span-full">
                        {% for message in app.flashes('success') %}
                        <div class="border-l-4 border-green-400 bg-green-50 p-4 dark:border-green-500 dark:bg-green-500/10">
                            <div class="flex">
                                <div class="shrink-0">
                                    <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 text-green-400">
                                        <path d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z" clip-rule="evenodd" fill-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-green-700 dark:text-green-300">{{ message }}</p>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="col-span-full">
                    {% if load|length>0 %}
                        <div class="grid max-w-2xl grid-cols-2 gap-2 sm:grid-cols-6 md:col-span-2">
                            <div class="sm:col-span-3">
                                <span for="form_address" class="block text-sm/6 font-medium text-gray-900 dark:text-white">{{ 'model.field.loads'|trans }}</span>
                            </div>
                            <div class="col-span-full">
                                <div class="flow-root">
                                    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                                        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                                            <table id="loads" class="relative min-w-full divide-y divide-gray-300 dark:divide-white/15">
                                                <thead>
                                                <tr>
                                                    <th scope="col" class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold whitespace-nowrap text-gray-900 sm:pl-0 dark:text-white">{{'global.nav.load'|trans}}</th>
                                                    <th scope="col" class="py-3.5 pr-4 pl-3 whitespace-nowrap sm:pr-0">
                                                        <span class="sr-only">{{ 'model.list.edit'|trans }}</span>
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for loaditem in load %}
                                                    <tr id="load-{{ loaditem.id }}">
                                                        <td class="py-2 pr-3 pl-4 text-sm whitespace-nowrap text-gray-500 sm:pl-0 dark:text-gray-400">
                                                            <a href="{{ path('mbs_model', {id: loaditem.loaditem.id}) }}" class="text-green-800 hover:text-green-900 dark:text-green-600 dark:hover:text-green-500">{{ loaditem.loaditem.name }}</a>
                                                        </td>
                                                        <td class="px-2 py-2 text-sm whitespace-nowrap text-gray-900 dark:text-white">
                                                            <button type="button" command="show-modal" commandfor="dialog" class="delete-function" data-headline="{{ 'model.load.delete.headline'|trans({'load': loaditem.loaditem.name}) }}" data-path="{{ path('mbs_model_load_delete', {'id': loaditem.id}) }}">
                                                                <svg class="pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4 dark:text-gray-400 stroke-red-600 dark:stroke-red-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                                                </svg><span class="sr-only">{{ 'model.load.trash'|trans({'load': loaditem.loaditem.name}) }}</span>
                                                            </button>
                                                        </td>

                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                                <tfoot>
                                                <tr>
                                                    <td class="h-100 align-top py-2 pr-3 pl-4 text-sm whitespace-nowrap text-gray-500 sm:pl-0 dark:text-gray-400">
                                                        <div class="relative block">
                                                            <input type="hidden" id="el-model" name="model"/>
                                                            <input type="hidden" id="el-modelname" name="modelname"/>
                                                            <input data-path="{{ path('mbs_model_autocomplete') }}" id="load" type="text" autocomplete="off" class="block w-full rounded-md bg-white py-1.5 pr-12 pl-3 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-green-700" />
                                                            <button type="button" class="absolute inset-y-0 right-0 flex items-center rounded-r-md px-2 focus:outline-hidden">
                                                                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 text-gray-400">
                                                                    <path d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
                                                                </svg>
                                                            </button>

                                                            <div id="el-options" anchor="bottom end" popover class="max-h-60 w-(--input-width) overflow-auto rounded-md bg-white py-1 text-base shadow-lg outline outline-black/5 transition-discrete [--anchor-gap:--spacing(1)] data-leave:transition data-leave:duration-100 data-leave:ease-in data-closed:data-leave:opacity-0 sm:text-sm dark:bg-gray-800 dark:shadow-none dark:-outline-offset-1 dark:outline-white/10" style="position:absolute; top: 40px">
                                                                <a value="Chelsea Hagon" class="block px-3 py-2 text-gray-900 select-none hover:bg-green-800 hover:text-white dark:text-white dark:hover:bg-green-700">
                                                                    <div class="flex">
                                                                        <span class="truncate">Chelsea Hagon</span>
                                                                        <span class="ml-2 truncate text-gray-500 hover:text-white dark:text-gray-400 dark:hover:text-white">@chelseahagon</span>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        </div>

                                                    </td>
                                                    <td class="h-100 align-top px-2 py-2 text-sm whitespace-nowrap text-gray-900 dark:text-white">
                                                        <div class="grid grid-cols">
                                                            <input type="hidden" id="model" name="model" value="{{ model.id }}"/>
                                                            <input type="hidden" id="add-path" name="path" value="{{ path('mbs_model_load_add') }}"/>
                                                            <button type="button" id="add-load" disabled="true" class="rounded-md disabled:bg-gray-400 bg-green-800 py-2 text-sm font-semibold text-white shadow-xs hover:bg-green-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-800 dark:bg-green-700 dark:shadow-none dark:focus-visible:outline-green-700">{{ 'global.add'|trans }}</button>
                                                        </div>
                                                    </td>
                                                </tr>

                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="sm:col-span-3 sm:row-span-60">
                            </div>
                        </div>
                    {% else %}
                        <div class="grid max-w-2xl grid-cols-2 gap-2 sm:grid-cols-6 md:col-span-2">
                            <div class="sm:col-span-3">
                                <span for="form_address" class="block text-sm/6 font-medium text-gray-900 dark:text-white">{{ 'model.field.loads'|trans }}</span>
                            </div>
                            <div class="col-span-full">
                                <div class="flow-root">
                                    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                                        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                                            <table id="loads" class="relative min-w-full divide-y divide-gray-300 dark:divide-white/15">
                                                <thead>
                                                <tr>
                                                    <th scope="col" class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold whitespace-nowrap text-gray-900 sm:pl-0 dark:text-white">{{'global.nav.load'|trans}}</th>
                                                    <th scope="col" class="py-3.5 pr-4 pl-3 whitespace-nowrap sm:pr-0">
                                                        <span class="sr-only">{{ 'model.list.edit'|trans }}</span>
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody>

                                                </tbody>
                                                <tfoot>
                                                <tr>
                                                    <td class="h-100 align-top py-2 pr-3 pl-4 text-sm whitespace-nowrap text-gray-500 sm:pl-0 dark:text-gray-400">
                                                        <div class="relative block">
                                                            <input type="hidden" id="el-model" name="model"/>
                                                            <input type="hidden" id="el-modelname" name="modelname"/>
                                                            <input data-path="{{ path('mbs_model_autocomplete') }}" id="load" type="text" autocomplete="off" class="block w-full rounded-md bg-white py-1.5 pr-12 pl-3 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm/6 dark:bg-white/5 dark:text-white dark:outline-white/10 dark:placeholder:text-gray-500 dark:focus:outline-green-700" />
                                                            <button type="button" class="absolute inset-y-0 right-0 flex items-center rounded-r-md px-2 focus:outline-hidden">
                                                                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 text-gray-400">
                                                                    <path d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
                                                                </svg>
                                                            </button>

                                                            <div id="el-options" anchor="bottom end" popover class="max-h-60 w-(--input-width) overflow-auto rounded-md bg-white py-1 text-base shadow-lg outline outline-black/5 transition-discrete [--anchor-gap:--spacing(1)] data-leave:transition data-leave:duration-100 data-leave:ease-in data-closed:data-leave:opacity-0 sm:text-sm dark:bg-gray-800 dark:shadow-none dark:-outline-offset-1 dark:outline-white/10" style="position:absolute; top: 40px">
                                                                <a value="Chelsea Hagon" class="block px-3 py-2 text-gray-900 select-none hover:bg-green-800 hover:text-white dark:text-white dark:hover:bg-green-700">
                                                                    <div class="flex">
                                                                        <span class="truncate">Chelsea Hagon</span>
                                                                        <span class="ml-2 truncate text-gray-500 hover:text-white dark:text-gray-400 dark:hover:text-white">@chelseahagon</span>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        </div>

                                                    </td>
                                                    <td class="h-100 align-top px-2 py-2 text-sm whitespace-nowrap text-gray-900 dark:text-white">
                                                        <div class="grid grid-cols">
                                                            <input type="hidden" id="model" name="model" value="{{ model.id }}"/>
                                                            <input type="hidden" id="add-path" name="path" value="{{ path('mbs_model_load_add') }}"/>
                                                            <button type="button" id="add-load" disabled="true" class="rounded-md disabled:bg-gray-400 bg-green-800 py-2 text-sm font-semibold text-white shadow-xs hover:bg-green-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-800 dark:bg-green-700 dark:shadow-none dark:focus-visible:outline-green-700">{{ 'global.add'|trans }}</button>
                                                        </div>
                                                    </td>
                                                </tr>

                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="sm:col-span-3 sm:row-span-60">
                            </div>
                        </div>
                    {% endif %}
                    </div>
                </div>
                </div>
            </div>
        </main>
        <el-row class="hidden">
            <table>
                <tr id="row-template">
                    <td id="template-row-model" class="py-2 pr-3 pl-4 text-sm whitespace-nowrap text-gray-500 sm:pl-0 dark:text-gray-400"></td>
                    <td class="px-2 py-2 text-sm whitespace-nowrap text-gray-900 dark:text-white"></td>
                </tr>
            </table>
        </el-row>
    </div>
    </div>
    <el-dialog>
        <dialog id="dialog" aria-labelledby="dialog-title" class="fixed inset-0 size-auto max-h-none max-w-none overflow-y-auto bg-transparent backdrop:bg-transparent">
            <el-dialog-backdrop class="fixed inset-0 bg-gray-500/75 transition-opacity data-closed:opacity-0 data-enter:duration-300 data-enter:ease-out data-leave:duration-200 data-leave:ease-in dark:bg-gray-900/50"></el-dialog-backdrop>

            <div tabindex="0" class="flex min-h-full items-end justify-center p-4 text-center focus:outline-none sm:items-center sm:p-0">
                <el-dialog-panel class="relative transform overflow-hidden rounded-lg bg-white px-4 pt-5 pb-4 text-left shadow-xl transition-all data-closed:translate-y-4 data-closed:opacity-0 data-enter:duration-300 data-enter:ease-out data-leave:duration-200 data-leave:ease-in sm:my-8 sm:w-full sm:max-w-lg sm:p-6 data-closed:sm:translate-y-0 data-closed:sm:scale-95 dark:bg-gray-800 dark:outline dark:-outline-offset-1 dark:outline-white/10">
                    <div class="sm:flex sm:items-start">
                        <div class="mx-auto flex size-12 shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:size-10 dark:bg-red-500/10">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 text-red-600 dark:text-red-400">
                                <path d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                            <h3 id="dialog-title" class="text-base font-semibold text-gray-900 dark:text-white">{{ 'model.load.delete.headline'|trans }}</h3>
                            <div class="mt-2">
                                <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'model.load.delete.text'|trans }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
                        <a href="" id="dialog-action" type="button" command="close" commandfor="dialog" class="inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-red-500 sm:ml-3 sm:w-auto dark:bg-red-500 dark:shadow-none dark:hover:bg-red-400">
                            {{ 'model.delete.delete'|trans }}</a>
                        <button type="button" command="close" commandfor="dialog" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-xs inset-ring-1 inset-ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto dark:bg-white/10 dark:text-white dark:shadow-none dark:inset-ring-white/5 dark:hover:bg-white/20">
                            {{ 'model.delete.cancel'|trans }}</button>
                    </div>
                </el-dialog-panel>
            </div>
        </dialog>
    </el-dialog>
    <script src="{{ asset('js/jquery-3.7.1.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/model.js') }}" type="text/javascript"></script>


{% endblock %}
